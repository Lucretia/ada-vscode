{
    "name": "ada-vscode",
    "displayName": "Ada VSCode",
    "description": "Ada programming language support for VSCode.",
    "version": "0.0.1",
    "publisher": "codecoolstuff",
    "engines": {
        "vscode": "^1.24.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "ada",
            "aliases": ["Ada", "ada", "Ada 83", "Ada95", "Ada 2005", "Ada 2012"],
            "extensions": [".ads",".adb",".ada"],
            "configuration": "./ada.language-configuration.json"
        }],
        "grammars": [{
            "language": "ada",
            "scopeName": "source.ada",
            "path": "./syntaxes/ada.tmLanguage.json"
        }],
        "snippets": [
            {
                "language": "ada",
                "path": "./snippets/ada.json"
            }
        ],
        "configurationDefaults": {
            "[ada]": {
                "editor.insertSpaces": true,
                "editor.tabSize": 3
            }
        }
    }
}